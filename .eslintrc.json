{
  "extends": ["eslint:recommended", "google"],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "node": true,
    "es6": true
  },
  "rules": {
    "brace-style": "off",
    "eol-last": ["warn", "always"],
    "newline-before-return": "warn",
    "newline-after-var": "warn",
    "object-curly-spacing": "off",
    "linebreak-style": ["warn", "windows"],
    "padded-blocks": ["warn", "never"],
    "max-len": [1, {
      "code": 120
    }],
    "arrow-parens": "off",
    "no-console": "off"
  }
}
